<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".disablitydetails">

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:layout_width="239dp"
            android:layout_height="66dp"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shapes"
            android:backgroundTint="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:onClick="scheme2users"
            android:padding="5dp"
            android:text="All Scheme users list"
            android:textSize="20dp"
            tools:targetApi="lollipop" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" For Details of person enter Aadhaar number : "
            android:textAlignment="center"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/aadh"
            android:layout_width="284dp"
            android:layout_height="77dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shapes"
            android:ems="10"
            android:hint="Enter 12 digit Aadhaar number"
            android:padding="5dp"
            android:maxLength="12"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="25dp" />
        <Button
            android:layout_width="239dp"
            android:layout_height="47dp"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shapes"
            android:backgroundTint="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:padding="5dp"
            android:text="Get Details"
            android:textSize="20dp"
            tools:targetApi="lollipop"
            android:onClick="details22"/>
        <TextView
            android:id="@+id/name000"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"/>

        <TextView
            android:id="@+id/fathername000"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/gender000"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/age000"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_marginTop="20dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/phone000"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_marginTop="20dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/house000"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_marginTop="20dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/income000"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_marginTop="20dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/city000"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_marginTop="20dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/state000"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_marginTop="20dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/phyno000"
            android:layout_width="match_parent"
            android:layout_height="58dp"

            android:layout_marginTop="20dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/statuss"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:textColor="@color/mr_cast_progressbar_progress_and_thumb_dark"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="25dp" />

    </LinearLayout>


</ScrollView>