<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onefamilyverification"
    android:orientation="vertical">

    <EditText
        android:layout_marginTop="25dp"
        android:id="@+id/checkno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:layout_marginLeft="95dp"
        android:inputType="textPersonName"
        android:hint="Enter Aadhaar Number"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="65dp" />

    <Button
        android:layout_width="239dp"
        android:layout_height="73dp"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shapes"
        android:onClick="clickednow"
        android:backgroundTint="@color/mr_cast_progressbar_progress_and_thumb_dark"
        android:padding="5dp"
        android:text="Get Original Details"
        android:textSize="20dp"
        tools:targetApi="lollipop"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:hint="Name"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_marginTop="15dp"
        android:layout_height="42dp"
        android:layout_width="match_parent"

        android:hint="Father name"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:hint="Age"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:hint="House Number"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:hint="City"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:hint="State"
        android:textAlignment="center"
        android:textSize="20dp"/>

</LinearLayout>