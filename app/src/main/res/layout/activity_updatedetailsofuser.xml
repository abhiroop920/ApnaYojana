<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatedetailsofuser"
    android:orientation="vertical">

    <EditText
        android:id="@+id/username"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shapes"
        android:ems="10"
        android:hint="Enter username"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="For voice command speak starting with ..colname.." />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:hint="Enter new details"
        android:textAlignment="center"
        android:textSize="10dp" />
    <EditText
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/editshape"
        android:drawableStart="@drawable/user"
        android:drawableLeft="@drawable/user"
        android:hint="Enter full name of user"
        android:padding="5dp" />

    <EditText
        android:id="@+id/passwd1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"

        android:background="@drawable/editshape"
        android:drawableLeft="@drawable/lock"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/passwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/editshape"
        android:drawableLeft="@drawable/lock"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/editshape"
        android:drawableLeft="@drawable/arrow"
        android:hint="Enter mobile number"
        android:padding="5dp"
        android:maxLength="10"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Which is your favourite sport?"
        android:textAlignment="center"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/editshape"
        android:drawableLeft="@drawable/arrow"
        android:hint="Enter answer to question"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editshape"
        android:backgroundTint="#7000BCD4"
        android:onClick="change"
        android:paddingTop="5dp"
        android:paddingBottom="0.5dp"
        android:text="Update Details"
        android:textSize="15dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="40dp"
        android:clickable="true"
        android:src="@drawable/ic_mic_black_40dp"
        android:focusable="true" />





</LinearLayout>
