<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Admin"
android:orientation="vertical">

<TextView
    android:layout_width="232dp"
    android:layout_height="61dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="200dp"
    android:text="Admin Login"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textSize="30dp"
    android:textAlignment="center"/>

<EditText
    android:id="@+id/username"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/shapes"
    android:drawableStart="@drawable/baseline_email_black_18dp"
    android:drawableLeft="@drawable/baseline_email_black_18dp"
    android:ems="10"
    android:hint="Enter username"
    android:padding="5dp" />

<EditText
    android:id="@+id/password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shapes"
    android:drawableStart="@drawable/baseline_lock_black_18dp"
    android:drawableLeft="@drawable/baseline_lock_black_18dp"
    android:ems="10"
    android:hint="@string/enter_password1"
    android:inputType="textPassword"
    android:padding="5dp" />
    <CheckBox
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:hint="show password"
        android:layout_marginTop="5dp"
        android:id="@+id/checkBox2"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:background="@drawable/shapes"
    android:backgroundTint="@color/colorAccent"
    android:drawableEnd="@drawable/outline_arrow_forward_black_18dp"
    android:drawableRight="@drawable/outline_arrow_forward_black_18dp"
    android:padding="5dp"
    android:text="@string/sign_in"
    tools:targetApi="lollipop"
    android:onClick="adminclick"/>

</LinearLayout>